# Development Environment Configuration
NODE_ENV=development
PORT=5000

# Database - PostgreSQL (Local Development)
DATABASE_URL=postgresql://filmflex:filmflex2024@localhost:5432/filmflex

# Session Secret (use a simple one for development)
SESSION_SECRET=development-session-secret-key

# Client URL - Local development - FIXED: Should match your server port
CLIENT_URL=http://localhost:5000

# Allowed Origins for CORS (allow all localhost ports)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4173,http://127.0.0.1:3000,http://localhost:5000

# Cloudflare Worker OAuth Configuration (Development)
USE_CLOUDFLARE_OAUTH=false
CLOUDFLARE_WORKER_URL=http://localhost:5000

# Local OAuth credentials (for development testing - empty = disabled)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Development specific settings
DEBUG=true
LOG_LEVEL=debug
# Email Service Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@filmflex.com
FROM_NAME=FilmFlex

# Email Service Configuration
USE_CLOUDFLARE_EMAIL=false
