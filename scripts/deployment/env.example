# FilmFlex Production Environment Variables
# Copy this file to .env before deployment

# Node environment (production for optimization)
NODE_ENV=production

# Server port configuration
PORT=5000

# Database connection
DATABASE_URL=postgresql://username:password@localhost:5432/filmflex
PGUSER=filmflex
PGPASSWORD=secure_password_here
PGDATABASE=filmflex
PGHOST=localhost
PGPORT=5432

# Session configuration (use a strong random value)
SESSION_SECRET=change_this_to_a_long_random_string

# API keys (if applicable)
# TMDB_API_KEY=your_tmdb_api_key_here

# Security settings
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# Logging configuration
LOG_LEVEL=info
LOG_FILE=/var/log/filmflex/app.log

# Admin setup (initial admin user configuration)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password_immediately
ADMIN_EMAIL=admin@example.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Cache configuration
CACHE_TTL=300000

# Feature flags
ENABLE_PREMIUM_FEATURES=true
ENABLE_ANALYTICS=true