# FilmFlex Production Environment Configuration

# Basic Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/filmflex
PGUSER=filmflex
PGPASSWORD=secure_password_here
PGDATABASE=filmflex
PGHOST=localhost
PGPORT=5432

# Security Settings
SESSION_SECRET=change_this_to_a_long_random_string
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_MAX_AGE=604800000  # 1 week in milliseconds

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/filmflex/app.log
ERROR_LOG_FILE=/var/log/filmflex/error.log

# Performance Settings
DB_POOL_SIZE=20
DB_CONNECTION_TIMEOUT=10000
DB_IDLE_TIMEOUT=30000
NODE_CLUSTER_INSTANCES=max  # Use 'max' for all available CPUs

# Feature Flags
ENABLE_USER_REGISTRATION=true
ENABLE_ADMIN_PANEL=true
ENABLE_API_RATE_LIMITING=true
API_RATE_LIMIT=100  # Requests per minute
CACHE_TTL=300  # Cache time-to-live in seconds

# Advanced Settings
TRUST_PROXY=true  # Set to true if behind a reverse proxy like Nginx