# Environment Configuration
NODE_ENV=development
PORT=5000

# Database - PostgreSQL (Docker)
DATABASE_URL=postgresql://filmflex:filmflex2024@localhost:5432/filmflex

# Session Secret
SESSION_SECRET=filmflex_dev_secret_2024_secure_key_change_in_production

# Client URL Configuration
CLIENT_URL=http://localhost:5000

# Allowed Origins for CORS
ALLOWED_ORIGINS=*

# Google OAuth 2.0 Configuration
# You need to get these from Google Cloud Console:
# 1. Go to https://console.cloud.google.com/
# 2. Create a new project or select existing
# 3. Enable Google+ API
# 4. Go to Credentials > Create Credentials > OAuth 2.0 Client ID
# 5. Add these redirect URIs:
#    - http://localhost:5000/api/auth/google/callback
#    - https://phimgg.com/api/auth/google/callback
GOOGLE_CLIENT_ID=your_actual_google_client_id_here
GOOGLE_CLIENT_SECRET=your_actual_google_client_secret_here

# Facebook OAuth Configuration
# You need to get these from Facebook Developers:
# 1. Go to https://developers.facebook.com/
# 2. Create a new app or select existing
# 3. Add Facebook Login product
# 4. Add these redirect URIs in Facebook Login Settings:
#    - http://localhost:5000/api/auth/facebook/callback
#    - https://phimgg.com/api/auth/facebook/callback
FACEBOOK_APP_ID=your_actual_facebook_app_id_here
FACEBOOK_APP_SECRET=your_actual_facebook_app_secret_here

# Email Service Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@filmflex.com
FROM_NAME=FilmFlex
# Email Service Configuration
USE_CLOUDFLARE_EMAIL=true
