{
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts",
    "client/**/*.ts",
    "client/**/*.tsx",
    "scripts/**/*.ts",
    "worker/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cypress"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "types": [
      "node",
      "@cloudflare/workers-types"
    ],
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "shared/*"
      ],
      "@server/*": [
        "server/*"
      ],
      "@client/*": [
        "client/*"
      ],
      "@/*": [
        "client/src/*"
      ]
    }
  }
}
